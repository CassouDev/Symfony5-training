{% extends "base.html.twig" %}

{% block title %}
	Création d'un produit
{% endblock %}

{% block body %}
    <h1>Nouveau produit</h1>
    
    {# {{ form(formView) = idem tout sans personnalisation}} #}
    {{ form_start(formView) }}

    {{ form_errors(formView) }}

    {# {{ form_widget(formView) }} = idem #}
    <div class="row">
        <div class="col">
            {{ form_row(formView.name) }}{# idem = {{ form_label(formView.name) }}{{ form_errors(formView.name) }}{{ form_widget(formView.name) }}{{ form_help(formView.name) }} #}
            {{ form_row(formView.price) }}
        </div>
        <div class="col">
            {{ form_row(formView.mainPicture) }}
            {{ form_row(formView.category) }}
            {{ form_row(formView.shortDescription) }}
        </div>
    </div>

    <button type="submit" class="btn btn-primary">
        <i class="fas fa-save"></i>
        Créer le produit
    </button>

    {{ form_end(formView) }}

{% endblock %}